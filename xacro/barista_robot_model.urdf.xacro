<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name = "barista_bot">
    <!-- Materials-->
        <material name="red">
            <color rgba="1.0 0.0 0.0 1"/>
        </material>

        <material name="green_light">
            <color rgba="0.0 1.0 0.0 1"/>
        </material>

        <material name="green_dark">
            <color rgba="0.0 0.5 0.0 1"/>
        </material>

        <material name="blue">
            <color rgba="0.0 0.0 1.0 1"/>
        </material>
        <material name="white">
            <color rgba="1.0 1.0 1.0 1"/>
        </material>
        <material name="black">
            <color rgba="0.0 0.0 0.0 1"/>
        </material>
        
  <link name="base_link">
  </link>

  <!-- Body -->
  <link name="chassis">
    <visual>
      <geometry>
      <cylinder length="0.155" radius="0.178"/>
      </geometry>
      <material name="red"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.155" radius="0.178"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.8"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0079385" ixy="0" ixz="0" iyy="0.0079385" iyz="0" izz="0.0126736"/>
    </inertial>
  </link>

  <joint name="base_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="base_link" />
    <child link="chassis" />
  </joint>


<xacro:include filename="$(find barista_robot_description)/xacro/standoff.xacro"/>

<joint name="fr_rod_joint" type="fixed">
    <origin rpy="1.5707 0 0" xyz="0.05 0.14 0.1875" />
    <parent link="chassis"/>
    <child link="fr_rod"/>
    <axis xyz="0 0 1" />
</joint>

<joint name="fl_rod_joint" type="fixed">
    <origin rpy="1.5707 0 0" xyz="0.05 -0.14 0.1875" />
    <parent link="chassis"/>
    <child link="fl_rod"/>
    <axis xyz="0 0 1" />
</joint>

<joint name="br_rod_joint" type="fixed">
    <origin rpy="1.5707 0 0" xyz="-0.05 0.14 0.1875" />
    <parent link="chassis"/>
    <child link="br_rod"/>
    <axis xyz="0 0 1" />
</joint>

<joint name="$bl_rod_joint" type="fixed">
    <origin rpy="1.5707 0 0" xyz="-0.05 -0.14 0.1875" />
    <parent link="chassis"/>
    <child link="bl_rod"/>
    <axis xyz="0 0 1" />
</joint>

<xacro:include filename="$(find barista_robot_description)/xacro/wheel.xacro"/>

<joint name="joint_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0 0.12 -0.075"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

<joint name="joint_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0 -0.12 -0.075"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

<xacro:include filename="$(find barista_robot_description)/xacro/cup_holder_tray.xacro"/>


<xacro:arg name="include_laser" default="true"/>
<xacro:macro name="laser_scanner" params = "include_laser:=true">
    <xacro:if value="${include_laser}">
    <link name="laser_link">
    <visual>
    <geometry>
        <mesh filename="package://barista_robot_description/meshes/hokuyo_urg_04lx.stl" scale="1.0 1.0 1.0"/>
    </geometry>
    <material name="black"/>
    </visual>
    </link>

  <joint name="laser_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.1 0 0.08" />
    <parent link="chassis" />
    <child link="laser_link" />
    <axis xyz="0 1 0" />
  </joint>


<gazebo reference="laser_link">
    <sensor name="sensor_ray" type="ray">
        <pose>0 0 0 0 0 0</pose>
        <ray>
          <scan>
            <horizontal>
              <samples>200</samples>
              <resolution>1.0</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>5.0</max>
          </range>
        </ray>
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>100.0</update_rate>
        <plugin name="laser" filename="libgazebo_ros_ray_sensor.so">
          <output_type>sensor_msgs/LaserScan</output_type>
          <ros>
            
            <remapping>~/out:=scan</remapping>
          </ros>

        </plugin>
    </sensor>
</gazebo>

</xacro:if>
</xacro:macro>

<xacro:laser_scanner include_laser="true"/>

  <!-- JOINT PUBLISHER -->
  <gazebo>
    <plugin name="box_bot_joint_state" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
          <remapping>~/out:=joint_states</remapping>
      </ros>
      <update_rate>30</update_rate>

      <joint_name>joint_left_wheel</joint_name>
      <joint_name>joint_right_wheel</joint_name>
      <joint_name>front_yaw_joint</joint_name>
      <joint_name>back_yaw_joint</joint_name>
      <joint_name>front_roll_joint</joint_name>
      <joint_name>back_roll_joint</joint_name>
      <joint_name>front_pitch_joint</joint_name>
      <joint_name>back_pitch_joint</joint_name>
      
    </plugin>
  </gazebo>

  <!-- Differential drive -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">

      <!-- wheels -->
      <left_joint>joint_left_wheel</left_joint>
      <right_joint>joint_right_wheel</right_joint>

      <!-- kinematics -->
      <wheel_separation>0.1</wheel_separation>
      <wheel_diameter>0.07</wheel_diameter>

      <!-- limits -->
      <max_wheel_torque>1.0</max_wheel_torque>
      <max_wheel_acceleration>2.0</max_wheel_acceleration>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>

    </plugin>
  </gazebo>


 <!-- Caster Wheel Front -->
  <link name="front_yaw_link">
    <visual>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.005" radius="0.0206"/>
        </geometry>
        <material name="blue"/>
      </visual>

    <inertial>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="3.45123e-05" ixy="0" ixz="0" iyy="3.45123e-05" iyz="0" izz="3.45123e-05"/>
    </inertial>
 
  </link>

  <joint name="front_yaw_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0.12 0 -0.075" />
    <parent link="chassis" />
    <child link="front_yaw_link" />
    <axis xyz="0 0 1" />
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>


  <link name="front_roll_link">
      <visual>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.005" radius="0.0206"/>
        </geometry>
        <material name="red"/>
      </visual>

      <inertial>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="3.45123e-05" ixy="0" ixz="0" iyy="3.45123e-05" iyz="0" izz="3.45123e-05"/>
    </inertial>

  </link>

  <joint name="front_roll_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="front_yaw_link" />
    <child link="front_roll_link" />
    <axis xyz="1 0 0" />
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

  <link name="front_pitch_link">
    <visual>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.0206"/>
      </geometry>
      <material name="green_dark"/>
    </visual>

    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.0206"/>
      </geometry>
    </collision>


    <inertial>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="3.45123e-05" ixy="0" ixz="0" iyy="3.45123e-05" iyz="0" izz="3.45123e-05"/>
    </inertial>

  </link>

  <joint name="front_pitch_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="front_roll_link" />
    <child link="front_pitch_link" />
    <axis xyz="0 1 0" />
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>

<!-- Caster Wheel Back -->
  <link name="back_yaw_link">
    <visual>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.005" radius="0.0206"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <inertial>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="3.45123e-05" ixy="0" ixz="0" iyy="3.45123e-05" iyz="0" izz="3.45123e-05"/>
    </inertial>

  </link>

  <joint name="back_yaw_joint" type="continuous">
    <origin rpy="0 0 0" xyz="-0.12 0 -0.075" />
    <parent link="chassis" />
    <child link="back_yaw_link" />
    <axis xyz="0 0 1" />
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>


  <link name="back_roll_link">
      <visual>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.005" radius="0.0206"/>
        </geometry>
        <material name="red"/>
      </visual>
      <inertial>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="3.45123e-05" ixy="0" ixz="0" iyy="3.45123e-05" iyz="0" izz="3.45123e-05"/>
    </inertial>
  </link>

  <joint name="back_roll_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="back_yaw_link" />
    <child link="back_roll_link" />
    <axis xyz="1 0 0" />
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>



  <link name="back_pitch_link">
    <visual>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.0206"/>
      </geometry>
      <material name="green_light"/>
    </visual>
    
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.0206"/>
      </geometry>
    </collision>

    <inertial>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="3.45123e-05" ixy="0" ixz="0" iyy="3.45123e-05" iyz="0" izz="3.45123e-05"/>
    </inertial>
  </link>

  <joint name="back_pitch_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="back_roll_link" />
    <child link="back_pitch_link" />
    <axis xyz="0 1 0" />
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1"/>
  </joint>


</robot>
